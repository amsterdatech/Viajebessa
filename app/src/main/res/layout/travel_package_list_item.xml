<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height" >

    <ImageView
        android:id="@+id/item_picture"
        android:layout_width="@dimen/list_item_image_width"
        android:layout_height="@dimen/list_item_image_height"
        android:layout_alignParentLeft="true"
        android:contentDescription="picture"
        android:scaleType="centerCrop"
        android:src="@color/default_image_background" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_picture"
        android:layout_marginLeft="@dimen/text_horizontal_margin"
        android:layout_marginRight="@dimen/text_horizontal_margin"
        android:layout_marginTop="@dimen/text_vertical_top_margin"
        android:layout_toRightOf="@+id/item_picture"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxLines="2"
        android:textColor="@android:color/primary_text_light"
        android:textSize="@dimen/list_item_title_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_title"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/item_title"
        android:layout_marginBottom="@dimen/text_vertical_bottom_margin"
        android:layout_marginRight="@dimen/text_horizontal_margin"
        android:layout_toRightOf="@+id/item_picture"
        android:gravity="left|center_vertical"
        android:textColor="@drawable/list_item_price_text_color_selector"
        android:textSize="@dimen/list_item_price_text_size" />

</RelativeLayout>